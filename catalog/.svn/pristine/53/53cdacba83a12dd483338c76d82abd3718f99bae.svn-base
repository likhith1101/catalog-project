<div class="container">
  <h2>Login</h2>
  <form #loginForm="ngForm" method="post" (ngSubmit)="login(loginForm)">
    <label for="username">username:</label>
    <input type="email" id="email" name="username" ngModel required />

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" ngModel required />

    <button type="submit" class="btn-login">login</button>
  </form>
  <button class="btn-back" (click)="goBack()">go back</button>
</div>
